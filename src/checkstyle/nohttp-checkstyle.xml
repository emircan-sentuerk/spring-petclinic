<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
	"-//Puppy Crawl//DTD Check Configuration 1.2//EN"
	"https://checkstyle.org/dtds/configuration_1_2.dtd">
<module name="com.puppycrawl.tools.checkstyle.Checker">
	<module name="io.spring.nohttp.checkstyle.check.NoHttpCheck"/>
	<module name="SuppressionFilter">
		<property name="file" value="${config_loc}/nohttp-checkstyle-suppressions.xml"/>
	</module>
	<module name="TreeWalker">
		<!-- Disable checks as needed -->
		<module name="JavadocPackage" severity="ignore"/>
		<module name="JavadocMethod" severity="ignore"/>
		<module name="JavadocVariable" severity="ignore"/>
		<module name="LineLength">
			<property name="severity" value="ignore"/>
		</module>
		<!-- Add more modules and properties as needed -->
	</module>
</module>
